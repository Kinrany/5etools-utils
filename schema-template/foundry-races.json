{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "foundry-races.json",
	"version": "1.1.1",

	"type": "object",

	"properties": {
		"raceFeature": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"$$merge": [
					{
						"$ref": "util.json#/$defs/foundrySideDataGenericObject"
					},
					{
						"properties": {
							"raceName": {
								"description": "The full name of the race, with subrace parts/etc. applied.",
								"type": "string"
							},
							"raceSource": {
								"description": "The source of the subrace or race.",
								"$ref": "util.json#/$defs/source"
							}
						}
					}
				],
				"required": [
					"name",
					"source",
					"raceName",
					"raceSource"
				],
				"additionalProperties": false
			}
		}
	},

	"required": [
		"raceFeature"
	],
	"additionalProperties": false
}
