{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "recipes.json",
	"version": "1.5.1",
	"type": "object",

	"$defs": {
		"recipeData": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"source": {"$ref": "util.json#/$defs/source"},
				"page": {"$ref": "util.json#/$defs/page"},

				"$$ifBrew": {
					"fluff": {
						"$ref": "util.json#/$defs/fluffObject"
					},
					"foundryImg": {
						"$ref": "util.json#/$defs/foundryImg"
					}
				},
				"time": {
					"type": "object",
					"$$ifSite": {
						"properties": {
							"total": {"$ref": "util-time.json#/$defs/timeMinutes"},
							"cooking": {"$ref": "util-time.json#/$defs/timeMinutes"},
							"preparation": {"$ref": "util-time.json#/$defs/timeMinutes"}
						}
					},
					"$$ifBrew": {
						"patternProperties": {
							"^[a-zA-Z ]+$": {"$ref": "util-time.json#/$defs/timeMinutes"}
						}
					},
					"additionalProperties": false,
					"minProperties": 1
				},
				"serves": {
					"oneOf": [
						{
							"type": "object",
							"properties": {
								"min": {"type": "integer"},
								"max": {"type": "integer"},
								"note": {"$ref": "entry.json"}
							},
							"required": ["min", "max"],
							"additionalProperties": false
						},
						{
							"type": "object",
							"properties": {
								"exact": {"type": "integer"},
								"note": {"$ref": "entry.json"}
							},
							"required": ["exact"],
							"additionalProperties": false
						}
					]
				},
				"makes": {
					"$ref": "entry.json"
				},
				"ingredients": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"equipment": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"instructions": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"noteCook": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"type": {
					"type": "string",
					"$$switch_key": {
						"key_site": "enum",
						"key_ua": "enum",
						"key_brew": "examples",
						"value": ["Dwarven", "Elven","Elixir/Ale", "Human", "Halfling", "Uncommon Cuisine"]
					}
				},
				"diet": {
					"type": "string",
					"description": "C: Vegetarian [aka \"cheese\"]\n V: Vegan\n X: Omnivorous",
					"enum": ["C", "V", "X"]
				},
				"miscTags": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": ["alcohol", "feast"]
					}
				},
				"allergenGroups": {
					"type": "array",
					"description": "One of the 14 major food allergens; see https://erudus.com/food-allergens for more information.",
					"items": {
						"type": "string",
						"enum": [
							"celery",
							"crustaceans",
							"eggs",
							"fish",
							"gluten",
							"lupin",
							"milk",
							"molluscs",
							"mustard",
							"nuts",
							"peanuts",
							"sesame",
							"soya",
							"sulphites"
						]
					}
				},
				"dishTypes": {
					"type": "array",
					"items": {
						"type": "string",
						"$$switch_key": {
							"key_site": "enum",
							"key_ua": "enum",
							"key_brew": "examples",
							"value": [
								"appetizer",
								"bread",
								"cocktail",
								"dessert",
								"drink",
								"entree",
								"pastry",
								"salad",
								"side",
								"snack",
								"soup"
							]
						}
					}
				},
				"hasFluff": {"type": "boolean"},
				"hasFluffImages": {"type": "boolean"}
			},
			"additionalProperties": false
		},

		"recipe": {
			"anyOf": [
				{
					"type": "object",
					"$$merge": [
						{
							"$ref": "#/$defs/recipeData"
						},
						{
							"required": ["name", "source", "instructions", "ingredients"]
						}
					]
				},
				{
					"type": "object",
					"$$merge": [
						{
							"$ref": "#/$defs/recipeData"
						},
						{
							"$ref": "util.json#/$defs/copyBlockGeneric"
						}
					]
				}
			]
		}
	},

	"properties": {
		"_meta": {
			"$ref": "util.json#/$defs/metaBlock"
		},
		"recipe": {
			"type": "array",
			"uniqueItems": true,
			"minItems": 1,
			"items": {
				"$ref": "#/$defs/recipe"
			}
		}
	},

	"required": ["recipe"],

	"additionalProperties": false
}
