{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "foundry-items.json",
	"version": "1.2.1",

	"type": "object",

	"properties": {
		"magicvariant": {"$ref": "util.json#/$defs/foundrySideDataGenericArray"},
		"item": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"$$merge": [
					{
						"$ref": "util.json#/$defs/foundrySideDataGenericObject"
					},
					{
						"properties": {
							"type": {
								"type": "string",
								"enum": [
									"weapon",
									"tool",
									"consumable",
									"equipment",
									"container",
									"loot"
								]
							}
						}
					}
				],
				"additionalProperties": false
			}
		}
	},

	"required": [
		"magicvariant",
		"item"
	],
	"additionalProperties": false
}
