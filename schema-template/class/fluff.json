{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "fluff-class.json",
	"version": "1.0.0",
	"type": "object",

	"$defs": {
		"_subclassFluffItemData": {
			"type": "object",
			"$$merge": [
				{
					"$ref": "../util.json#/$defs/genericFluffArrayItemData"
				},
				{
					"properties": {
						"className": {"type": "string"},
						"classSource": {"$ref": "../util.json#/$defs/source"}
					}
				}
			]
		},

		"subclassFluffArray": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"anyOf": [
					{
						"type": "object",
						"$$merge": [
							{
								"$ref": "#/$defs/_subclassFluffItemData"
							},
							{
								"required": ["name", "source", "className", "classSource"]
							}
						]
					},
					{
						"type": "object",
						"$$merge": [
							{
								"$ref": "#/$defs/_subclassFluffItemData"
							},
							{
								"$ref": "#/$defs/_subclassFluffItemData"
							}
						]
					}
				]
			}
		}
	},

	"properties": {
		"_meta": {
			"$ref": "../util.json#/$defs/metaBlock"
		},
		"classFluff": {
			"$ref": "../util.json#/$defs/genericFluffArray"
		},
		"subclassFluff": {
			"$ref": "#/$defs/subclassFluffArray"
		}
	},

	"additionalProperties": false
}
