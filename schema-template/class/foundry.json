{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "foundry-class.json",
	"version": "1.4.3",

	"type": "object",

	"$defs": {
		"entryDataObject": {
			"description": "Additional \"5etools-type\" data to be stored on the entry.",
			"type": "object",
			"properties": {
				"languageProficiencies": {
					"$ref": "../util.json#/$defs/languageProficiencies"
				},
				"skillProficiencies": {
					"$ref": "../util.json#/$defs/skillProficiencies"
				},
				"weaponProficiencies": {
					"$ref": "../util.json#/$defs/weaponProficiencies"
				},
				"armorProficiencies": {
					"$ref": "../util.json#/$defs/armorProficiencies"
				},
				"toolProficiencies": {
					"$ref": "../util.json#/$defs/toolProficiencies"
				},
				"savingThrowProficiencies": {
					"$ref": "../util.json#/$defs/savingThrowProficiencies"
				},
				"expertise": {
					"$ref": "../util.json#/$defs/expertise"
				},
				"resist": {
					"$ref": "../util.json#/$defs/damageResistArrayPlayer"
				},
				"immune": {
					"$ref": "../util.json#/$defs/damageImmunityArrayPlayer"
				},
				"vulnerable": {
					"$ref": "../util.json#/$defs/damageVulnerabilityArrayPlayer"
				},
				"conditionImmune": {
					"$ref": "../util.json#/$defs/conditionImmunityArrayPlayer"
				},
				"resources": {
					"$ref": "../util.json#/$defs/resourcesArray"
				},
				"senses": {
					"$ref": "../util.json#/$defs/sensesArray"
				}
			},
			"additionalProperties": false
		}
	},

	"properties": {
		"class": {
			"type": "array",
			"items": {
				"type": "object",
				"$$merge": [
					{
						"$ref": "../util.json#/$defs/foundrySideDataGenericObject"
					},
					{
						"properties": {
							"entries": {"type": "array", "items": {"$ref": "../entry.json"}},
							"entryData": {"$ref": "#/$defs/entryDataObject"},

							"advancement": {"$ref": "../util.json#/$defs/foundryAdvancementsArray"},
							"chooseSystem": {"type": "array", "items": {"$ref": "../util.json#/$defs/foundrySystemObject"}},
							"isChooseSystemRenderEntries": {"type": "boolean"},
							"isChooseFlagsRenderEntries": {"type": "boolean"},
							"isIgnored": {"const": true},
							"ignoreSrdEffects": {"const": true},
							"actorDataMod": {"type": "object"},
							"actorTokenMod": {"type": "object"},

							"subEntities": {"$ref": "../util.json#/$defs/foundrySubEntitiesObject"}
						}
					}
				],
				"additionalProperties": false
			},
			"minItems": 1,
			"uniqueItems": true
		},
		"subclass": {
			"type": "array",
			"items": {
				"type": "object",
				"$$merge": [
					{
						"$ref": "../util.json#/$defs/foundrySideDataGenericObject"
					},
					{
						"properties": {
							"className":  {"type": "string"},
							"classSource": {"$ref": "../util.json#/$defs/source"},

							"entries": {"type": "array", "items": {"$ref": "../entry.json"}},
							"entryData": {"$ref": "#/$defs/entryDataObject"},

							"advancement": {"$ref": "../util.json#/$defs/foundryAdvancementsArray"},
							"chooseSystem": {"type": "array", "items": {"$ref": "../util.json#/$defs/foundrySystemObject"}},
							"isChooseSystemRenderEntries": {"type": "boolean"},
							"isChooseFlagsRenderEntries": {"type": "boolean"},
							"isIgnored": {"const": true},
							"ignoreSrdEffects": {"const": true},
							"actorDataMod": {"type": "object"},
							"actorTokenMod": {"type": "object"},

							"subEntities": {"$ref": "../util.json#/$defs/foundrySubEntitiesObject"}
						}
					}
				],
				"required": [
					"name",
					"source",
					"className",
					"classSource"
				],
				"additionalProperties": false
			},
			"minItems": 1,
			"uniqueItems": true
		},
		"classFeature": {
			"type": "array",
			"items": {
				"type": "object",
				"$$merge": [
					{
						"$ref": "../util.json#/$defs/foundrySideDataGenericObject"
					},
					{
						"properties": {
							"className":  {"type": "string"},
							"classSource": {"$ref": "../util.json#/$defs/source"},
							"level":  {"type": "integer"},

							"entries": {"type": "array", "items": {"$ref": "../entry.json"}},
							"entryData": {"$ref": "#/$defs/entryDataObject"},

							"chooseSystem": {"type": "array", "items": {"$ref": "../util.json#/$defs/foundrySystemObject"}},
							"isChooseSystemRenderEntries": {"type": "boolean"},
							"isChooseFlagsRenderEntries": {"type": "boolean"},
							"isIgnored": {"const": true},
							"ignoreSrdEffects": {"const": true},
							"actorDataMod": {"type": "object"},
							"actorTokenMod": {"type": "object"},

							"subEntities": {"$ref": "../util.json#/$defs/foundrySubEntitiesObject"}
						}
					}
				],
				"required": [
					"name",
					"source",
					"className",
					"classSource",
					"level"
				],
				"additionalProperties": false
			},
			"minItems": 1,
			"uniqueItems": true
		},
		"subclassFeature": {
			"type": "array",
			"items": {
				"type": "object",
				"$$merge": [
					{
						"$ref": "../util.json#/$defs/foundrySideDataGenericObject"
					},
					{
						"properties": {
							"className":  {"type": "string"},
							"classSource": {"$ref": "../util.json#/$defs/source"},
							"level":  {"type": "integer"},

							"subclassShortName": {"type": "string"},
							"subclassSource": {"$ref": "../util.json#/$defs/source"},

							"entries": {"type": "array", "items": {"$ref": "../entry.json"}},
							"entryData": {"$ref": "#/$defs/entryDataObject"},

							"chooseSystem": {"type": "array", "items": {"$ref": "../util.json#/$defs/foundrySystemObject"}},
							"isChooseSystemRenderEntries": {"type": "boolean"},
							"isChooseFlagsRenderEntries": {"type": "boolean"},
							"isIgnored": {"const": true},
							"ignoreSrdEffects": {"const": true},
							"actorDataMod": {"type": "object"},
							"actorTokenMod": {"type": "object"},

							"subEntities": {"$ref": "../util.json#/$defs/foundrySubEntitiesObject"}
						}
					}
				],
				"required": [
					"name",
					"source",
					"className",
					"classSource",
					"level",
					"subclassShortName",
					"subclassSource"
				],
				"additionalProperties": false
			},
			"minItems": 1,
			"uniqueItems": true
		}
	},

	"required": [
		"class",
		"subclass",
		"classFeature",
		"subclassFeature"
	],
	"additionalProperties": false
}
