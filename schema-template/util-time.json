{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "util-time.json",
	"version": "1.0.1",
	"title": "Util: Time",

	"$defs": {
		"time": {
			"type": "object",
			"properties": {
				"number": {
					"type": "integer"
				},
				"unit": {
					"type": "string",
					"$$switch_key": {
						"key_site": "enum",
						"key_ua": "examples",
						"key_brew": "examples",
						"value": [
							"action",
							"bonus",
							"reaction",
							"round",
							"minute",
							"hour"
						]
					}
				},
				"condition": {
					"type": "string"
				}
			},
			"required": [
				"unit"
			],
			"additionalProperties": false
		},

		"timeMinutes": {"type": "integer"}
	}
}
