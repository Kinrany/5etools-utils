{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "util-time.json",
	"version": "1.0.0",
	"title": "Util: Time",
	"$defs": {
		"time": {
			"type": "object",
			"properties": {
				"number": {
					"type": "integer"
				},
				"unit": {
					"type": "string",
					"examples": [
						"action",
						"bonus",
						"reaction",
						"round",
						"minute",
						"hour"
					]
				},
				"condition": {
					"type": "string"
				}
			},
			"required": [
				"unit"
			],
			"additionalProperties": false
		}
	}
}